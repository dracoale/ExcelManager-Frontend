@model automatizacion.Models.FileCsv

@{
    ViewData["Title"] = "upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mt-4">Subir Archivo CSV</h1>

<div class="container">
    <form asp-action="ProcesarSeleccion" method="post">
        <table class="table table-bordered table-striped mt-3">
            <thead class="table-dark">
                <tr>
                    <th>Seleccionar</th>
                    <th>Encabezado</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.header.Count; i++)
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="selectedHeaders" value="@Model.header[i]" class="form-check-input">
                        </td>
                        <td>@Model.header[i]</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-center mt-3">
            <button type="submit" class="btn btn-primary">Limpiar y Procesar</button>
        </div>
    </form>

    <h1 class="text-center mt-4">Acciones</h1>
    <h5>Selecciona las columnas y en qué hoja las quieres guardar:</h5>
    <form method="post" asp-action="GuardarDividir" asp-controller="File" id="miFormulario">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Columna</th>
                <th>Seleccionar Hoja</th>
            </tr>
        </thead>
        <tbody>
            <!-- Estas filas se llenarán dinámicamente con JavaScript -->
            @foreach (var item in Model.header) {
                <tr>
                    <td>@item</td>
                <td>
                            <select name="seleccionados[@item]" class="form-select">
                        <option value="Hoja 1">Hoja 1</option>
                        <option value="Hoja 2">Hoja 2</option>
                        
                    </select>
                </td>
            </tr>
            }
            
        </tbody>
        </table>
        <button id="btnDividir" type="submit" class="btn btn-success mt-3">
            <span id="btnText">Dividir Excel</span>
            <span id="loadingSpinner" class="spinner-border spinner-border-sm d-none"></span>
        </button>
    </form>

    <!-- Botón para ejecutar la división -->
    
    
</div>
@section Scripts {
<script>
        $(document).ready(function () {
            $("#miFormulario").submit(function (event) {
                event.preventDefault(); // Evita la recarga de la página

                var formData = new FormData(this);

                $("#btnDividir").prop("disabled", true);
                $("#btnText").hide();
                $("#loadingSpinner").removeClass("d-none");

                $.ajax({
                    url: "/File/GuardarDividir",
                    type: "POST",
                    data: formData,
                    contentType: false,
                    processData: false,
                    xhrFields: {
                        responseType: 'blob' // Recibir la respuesta como un archivo
                    },
                    success: function (data, status, xhr) {
                        // Obtener el nombre del archivo desde los headers si es posible
                        var filename = "archivo_resultado.xlsx";
                        var disposition = xhr.getResponseHeader("Content-Disposition");
                        if (disposition && disposition.indexOf("filename=") !== -1) {
                            filename = disposition.split("filename=")[1].trim();
                        }

                        // Crear un Blob y un enlace de descarga
                        var blob = new Blob([data], { type: xhr.getResponseHeader("Content-Type") });
                        var link = document.createElement("a");
                        link.href = window.URL.createObjectURL(blob);
                        link.download = filename;

                        // Simular el clic para descargar
                        document.body.appendChild(link);
                        link.click();
                        document.body.removeChild(link);
                    },
                    error: function () {
                        alert("Error al procesar.");
                    },
                    complete: function () {
                        $("#btnDividir").prop("disabled", false);
                        $("#btnText").show();
                        $("#loadingSpinner").addClass("d-none");
                    }
                });
            });
        });

</script>
}
